@model ContatoModel
@{
    ViewData["Title"] = "Editar contato";

}

<div class="text-center">
    <h1 class="display-4">Editar contato</h1>
</div>

<form asp-controller="Contato" asp-action="Alterar" method="post">
    <input type="hidden" asp-for="Id"/>
    <div class="form-grupo">
        <label for="nome">Nome Completo</label>
        <input type="text" asp-for="Nome" class="form-control" id="nome" placeholder="Nome completo" />
        @Html.ValidationMessageFor( x=> x.Nome)
    </div>

    <div class="form-grupo">
        <label for="email">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" id="email" placeholder="E-mail" />
        @Html.ValidationMessageFor( x=> x.Email)
    </div>

    <div class="form-grupo">
        <label for="celular">Celular</label>
        <input type="text" asp-for="Celular" class="form-control" id="celular" placeholder="Celular" />
        @Html.ValidationMessageFor( x=> x.Celular)
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a class="btn btn-secundary btn-block" asp-controller="Contato" asp-action="Index" role="button">
        Voltar
    </a>
</form>